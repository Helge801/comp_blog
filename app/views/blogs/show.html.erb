<p id="notice"><%= notice %></p>

<div class="container">
  <div class="card justin-card">
    <div class="row">

      <div class="col-md-7 justin-body-style">
        <p>
          <h2><%= @blog.title %></h2>
        </p>

        <p>
          <%= image_tag @blog.image %>
        </p>
        <%= link_to 'Edit', edit_blog_path(@blog) %> |
        <%= link_to 'Back', blogs_path %>
        <p>
          <%= @blog.body %>
        </p>
        <%= link_to 'Edit', edit_blog_path(@blog) %> |
        <%= link_to 'Back', blogs_path %>    
      </div>

      <div class="col-md-5">
        <br>
        <br>
        <br>
        <center>
          <%= image_tag @user.image %>
          <p>
            <strong><%= @user.name %></strong>
          </p>      
          <p>
            <strong>Category:</strong>
            <strong><%= @blog.category %></strong>
          </p>
          </center>
          <hr>
          <strong>Comments:</strong>

          <%= form_for @comment, url: '#' do |f| %>
            <div class="form-group">
              <%= f.label :body %>
              <%= f.text_area :body, class: 'form-control' %>
              <small class="text-muted">From 2 to 1000 characters</small>
            </div>

            <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
          <% end %>

          <div id="comments" data-blog-id="<%= @blog.id %>">
            <%= render @blog.comments %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



